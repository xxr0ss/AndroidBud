<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="re.xx.androidbud.menu_fragments.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_shellCmdFragment"
            app:destination="@id/shellCmdFragment" />
        <action
            android:id="@+id/action_homeFragment_to_runServerFragment"
            app:destination="@id/runServerFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/shellCmdFragment"
        android:name="re.xx.androidbud.menu_fragments.ShellCmdFragment"
        android:label="@string/shell_command"
        tools:layout="@layout/fragment_shell_cmd" >
        <action
            android:id="@+id/action_shellCmdFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/runServerFragment"
        android:name="re.xx.androidbud.menu_fragments.RunServerFragment"
        android:label="Run server"
        tools:layout="@layout/fragment_run_server" >
        <action
            android:id="@+id/action_runServerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="re.xx.androidbud.SettingsFragment"
        android:label="Settings" >
        <action
            android:id="@+id/action_settingsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>